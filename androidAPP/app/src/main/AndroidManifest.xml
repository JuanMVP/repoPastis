<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.st.pillboxapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_pillbox"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_pillbox_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".viewModel.RecuperarPasswordActivity"></activity>
        <activity
            android:name=".ui.DashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/shapebox" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegistroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AddPersonaActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>