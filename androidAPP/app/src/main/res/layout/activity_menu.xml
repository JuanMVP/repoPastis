<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81d4fa"
    tools:context=".ui.MenuActivity">

    <ImageButton
        android:id="@+id/buttonAddPersona"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="68dp"
        android:layout_height="54dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pillbox"
        app:srcCompat="@drawable/ic_add_friend" />

    <TextView
        android:id="@+id/pillbox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:text="PillBox"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonListarPersonas"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="68dp"
        android:layout_height="54dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toEndOf="@+id/buttonAddPersona"
        app:layout_constraintTop_toBottomOf="@+id/pillbox"
        app:srcCompat="@drawable/ic_network" />

    <ImageButton
        android:id="@+id/buttonListarMedicamentos"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="68dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAddPersona"
        app:srcCompat="@drawable/ic_first_aid_kit" />

    <ImageButton
        android:id="@+id/buttonListarTratamientos"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="68dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/buttonListarMedicamentos"
        app:layout_constraintTop_toBottomOf="@+id/textListaPersonas"
        app:srcCompat="@drawable/ic_radiation" />

    <TextView
        android:id="@+id/textAddPersona"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/doppio_one"
        android:text="AÃ±adir Persona"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddPersona" />

    <TextView
        android:id="@+id/textListaPersonas"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/doppio_one"
        android:text="Lista de Personas"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toEndOf="@+id/textAddPersona"
        app:layout_constraintTop_toBottomOf="@+id/buttonListarPersonas" />

    <TextView
        android:id="@+id/textListaMedicamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/doppio_one"
        android:text="Lista de Medicamentos"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonListarMedicamentos"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/textListatratamientos"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/doppio_one"
        android:text="Lista de Tratamientos"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toEndOf="@+id/textListaMedicamentos"
        app:layout_constraintTop_toBottomOf="@+id/buttonListarTratamientos"
        app:layout_constraintVertical_bias="0.104" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="146dp"
        android:layout_height="136dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_medicina" />

</android.support.constraint.ConstraintLayout>